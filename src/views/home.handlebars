<div>
  <h1>Listado de productos</h1>
  <ul>
    {{#each products.products}}
    <li>
      <h3>{{this.title}}</h3>
      <p>{{this.description}}</p>
      <p>Precio: ${{this.price}}</p>
      <button class="addToCart" data-id={{this._id}}>Agregar al carrito</button>
    </li>
    {{/each}}
  </ul>
  <div>
    {{#if products.hasPrevPage}}
    <a href="/productos?page={{products.prevLink}}">Anterior</a>
    {{/if}}
    
    <span>PÃ¡gina {{products.page}} de {{products.totalPages}}</span>
      
    {{#if products.hasNextPage}}
      <a href="/productos?page={{products.nextLink}}">Siguiente</a>
    {{/if}}
  </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/home.js"></script>
<script src="/js/addToCart.js"></script> 